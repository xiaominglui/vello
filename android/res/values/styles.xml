<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="card">

    </style>

    <style name="card.review" parent="card">

    </style>

    <style name="card.review.main">
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:background">@color/md_white</item>
        <item name="android:layout_marginTop">@dimen/card_review_main_layout_view_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/card_review_main_layout_view_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/card_review_main_layout_view_margin_left</item>
        <item name="android:layout_marginRight">@dimen/card_review_main_layout_view_margin_right</item>
    </style>
    <style name="card.review.expand">
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:background">@color/md_white</item>
        <item name="android:layout_marginTop">@dimen/card_review_expand_layout_view_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/card_review_expand_layout_view_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/card_review_expand_layout_view_margin_left</item>
        <item name="android:layout_marginRight">@dimen/card_review_expand_layout_view_margin_right</item>
    </style>
    <style name="card.review.card_thumbnail_outer_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="card.review.thumbnail_image">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="card.review.header">
    </style>
    <style name="card.review.header.headline">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/md_black</item>
    </style>

    <style name="FlatColorButtonRippleStyle" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="android:background">@null</item>
        <item name="rd_backgroundColor">#33219AFF</item>
        <item name="rd_rippleColor">#33219AFF</item>
        <item name="rd_cornerRadius">4dp</item>
    </style>
</resources>