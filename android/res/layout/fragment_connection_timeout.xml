<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <com.malinskiy.materialicons.widget.IconTextView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iconic_connection_timeout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="{md-warning}"
        android:textSize="100sp"
        app:hacky_preview="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/title_connection_timeout"
        android:textColor="@android:color/darker_gray"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/title_connection_timeout_hint_retry"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />

</LinearLayout>