<com.android.deskclock.widget.swipeablelistview.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/word_card_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal|top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/keyword_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:textSize="35sp" />
        </LinearLayout>
        <Space
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/life_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/expandable_toggle_button"
            android:orientation="horizontal" >

            <com.atermenji.android.iconictextview.IconicTextView
                android:id="@+id/life_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/life_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="false"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/hairline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#2833b5e5"/>
    <FrameLayout
        android:id="@+id/info_area"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:background="@drawable/item_background">

        <ImageView
            android:id="@+id/expand"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:contentDescription="@string/expand_word"
            android:src="@drawable/ic_expand_down"
            android:layout_gravity="right"
            />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/expand_area"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        
        <LinearLayout
                android:id="@+id/phonetics_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

        <LinearLayout
                android:id="@+id/definition_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

    </LinearLayout>
</com.android.deskclock.widget.swipeablelistview.SwipeLayout>
