<com.android.deskclock.widget.swipeablelistview.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/word_card_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|top"
    android:orientation="vertical"
    android:paddingLeft="9dp"
    android:paddingRight="9dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/keyword_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:textColor="#9b9b9b"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/life_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|right"
            android:orientation="horizontal" >

            <com.atermenji.android.iconictextview.IconicTextView
                android:id="@+id/life_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/life_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textIsSelectable="false"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/info_area"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@drawable/item_background"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="16dp" >

        <ImageView
            android:id="@+id/expand"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:contentDescription="@string/expand_word"
            android:src="@drawable/ic_expand_down" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/expand_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-6dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/phonetics_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/definition_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:orientation="vertical" />
    </LinearLayout>

</com.android.deskclock.widget.swipeablelistview.SwipeLayout>